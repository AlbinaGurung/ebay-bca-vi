@using ebay.ViewModel

@model ProductSearch

<div class="container">


    <a href="/productunit/add" class="btn btn-success">
        New Unit
    </a>

    <a asp-action="Add" class="btn btn-success">
        New Unit
    </a>

    <form class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control">
                </div>
                <div class="col-3">
                    <br>
                    <button class="btn btn-primary">
                        Search
                    </button>
                </div>
            </div>
        </div>
    </form>

    <div class="card mt-2">
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            SN
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Discription
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            color
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var sn = 1;
                        foreach (var unit in Model.Data)
                        {
                                        <tr>
                                            <td>
                                                @(sn++)
                                            </td>
                                            <td>
                                                @unit.Name
                                            </td>
                                            <td>
                                                @unit.Description
                                            </td>
                                            <td>
                                                @unit.Price
                                            </td>
                                            <td>
                                                @unit.Color
                                            </td>

                                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
